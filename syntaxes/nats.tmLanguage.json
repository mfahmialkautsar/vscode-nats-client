{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "NATS",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#subjects"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#json-blocks"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#separators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.nats",
          "match": "#.*$"
        },
        {
          "name": "comment.line.double-slash.nats",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.nats",
          "match": "\\b(REPLY|REQUEST|SUBSCRIBE|PUBLISH|JETSTREAM)\\b"
        }
      ]
    },
    "subjects": {
      "patterns": [
        {
          "name": "entity.name.function.nats",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_.]*\\b(?=\\s|$)"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.nats",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "include": "#string-interpolation"
            }
          ]
        },
        {
          "name": "string.quoted.single.nats",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "include": "#string-interpolation"
            }
          ]
        }
      ]
    },
    "string-interpolation": {
      "patterns": [
        {
          "name": "variable.other.nats",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_.]*"
        },
        {
          "name": "meta.embedded.expression.nats",
          "begin": "\\$\\{",
          "end": "\\}",
          "contentName": "source.js",
          "patterns": [
            {
              "include": "source.js"
            }
          ]
        }
      ]
    },
    "json-blocks": {
      "patterns": [
        {
          "name": "meta.block.json.nats",
          "begin": "\\{",
          "end": "\\}",
          "patterns": [
            {
              "include": "source.json"
            }
          ]
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.nats",
          "match": "\\$[a-zA-Z_][a-zA-Z0-9_.]*"
        }
      ]
    },
    "separators": {
      "patterns": [
        {
          "name": "meta.separator.nats",
          "match": "^#{3,}\\s*$"
        }
      ]
    }
  },
  "scopeName": "source.nats"
}
